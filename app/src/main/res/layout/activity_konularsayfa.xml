<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:background="@drawable/arka"
    tools:context=".konularsayfa">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/esyalarbtn"
                android:layout_width="305dp"
                android:layout_height="59dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="40dp"
                android:background="@drawable/esyalarrr" />

            <Button
                android:id="@+id/hayvanlarbtn"
                android:layout_width="306dp"
                android:layout_height="58dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:background="@drawable/hayvanlarrr" />

            <Button
                android:id="@+id/konusmabtn"
                android:layout_width="309dp"
                android:layout_height="58dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:background="@drawable/konusmaaa" />

            <Button
                android:id="@+id/mesleklerbtn"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:background="@drawable/mesleklerrr" />

            <Button
                android:id="@+id/okulbtn"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:background="@drawable/okulll" />

            <Button
                android:id="@+id/renklerbtn"
                android:layout_width="311dp"
                android:layout_height="59dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:background="@drawable/renklerrr" />

            <Button
                android:id="@+id/sporbtn"
                android:layout_width="310dp"
                android:layout_height="47dp"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:background="@drawable/sporrr" />


            <Button
                android:id="@+id/yiyeceklerbtn"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:background="@drawable/yiyeceklerrr" />


        </GridLayout>


    </ScrollView>



</LinearLayout>